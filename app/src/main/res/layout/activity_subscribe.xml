<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".presentation.SubscribeRecycler">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <EditText
        android:id="@+id/subscribe_search_field"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/plaintextborderbox"
        android:ems="10"
        android:hint="Search"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subscribe_available_textbutton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Available"
        android:textColor="#0099B3"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe_search_field" />

    <View
        android:id="@+id/subscribe_underline1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:background="#0099B3"
        app:layout_constraintBottom_toBottomOf="@+id/subscribe_available_textbutton"
        app:layout_constraintEnd_toEndOf="@+id/subscribe_available_textbutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/subscribe_available_textbutton" />

    <TextView
        android:id="@+id/subscribe_subscriptions_textbutton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Subscriptions"
        android:textColor="#0099B3"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/subscribe_search_field"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/subscribe_underline2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="#0099B3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/subscribe_subscriptions_textbutton"
        app:layout_constraintEnd_toEndOf="@+id/subscribe_subscriptions_textbutton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/subscribe_subscriptions_textbutton" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@color/textfield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe_search_field" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hivesToSubRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/errorSubscribeHives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/hivesToSubRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hivesToSubRV"
        app:layout_constraintTop_toTopOf="@+id/hivesToSubRV"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/subscribe_back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/subscribe_search_field"
        app:layout_constraintEnd_toStartOf="@+id/subscribe_search_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subscribe_search_field"
        app:srcCompat="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/subscribe_more_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/subscribe_search_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subscribe_search_field"
        app:layout_constraintTop_toTopOf="@+id/subscribe_search_field"
        app:srcCompat="@drawable/ic_more_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>