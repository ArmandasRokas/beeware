<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.OnSubscriptionConfigurationFragment">

    <EditText
        android:id="@+id/tempIndicatorNumber"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginStart="23dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/weightIndicatorNum"
        app:layout_constraintTop_toBottomOf="@+id/tempIndicatorTV" />

    <TextView
        android:id="@+id/weightIndicatorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:text="weightMin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hiveNameTV" />

    <EditText
        android:id="@+id/weightIndicatorNum"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightIndicatorTV" />

    <TextView
        android:id="@+id/tempIndicatorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="tempIndicator"
        app:layout_constraintStart_toEndOf="@+id/weightIndicatorTV"
        app:layout_constraintTop_toBottomOf="@+id/hiveNameTV" />

    <TextView
        android:id="@+id/hiveNameTV"
        android:layout_width="144dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="hiveName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:text="Done"
        app:layout_constraintStart_toEndOf="@+id/tempIndicatorNumber"
        app:layout_constraintTop_toBottomOf="@+id/hiveNameTV" />
</androidx.constraintlayout.widget.ConstraintLayout>